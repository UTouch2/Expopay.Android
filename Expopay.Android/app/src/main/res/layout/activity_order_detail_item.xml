<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.expopay.android.activity.OrderDetailItemActivity">

    <FrameLayout
        android:id="@+id/itemBlank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0000"
        android:onClick="itemBlankOnClick"
        android:layout_above="@+id/relativeLayout"
        android:layout_alignParentTop="true">
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/relativeLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详情"
            android:textColor="#4E4E4E"
            android:textSize="13sp"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="#FFFFFF"
            android:onClick="btnCancel"
            android:scaleType="fitXY"
            android:src="@mipmap/mall_delete" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout7"
        android:background="#FFFFFF"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/itemProductImg"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/main_power" />

        <LinearLayout
            android:id="@+id/linearLayout8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/itemProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="电费订单"
                android:textColor="#4E4E4E"
                android:textSize="13sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#7B7B7B"
                    android:textSize="12sp"
                    android:text="订单编号：" />

                <TextView
                    android:id="@+id/itemOrderNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#7B7B7B"
                    android:textSize="12sp"
                    android:text="2134567889999" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#7B7B7B"
                    android:textSize="12sp"
                    android:text="交易流水号：" />

                <TextView
                    android:id="@+id/itemTranscationCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#7B7B7B"
                    android:textSize="12sp"
                    android:text="67889999" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#7B7B7B"
                    android:textSize="12sp"
                    android:text="支付流水号：" />

                <TextView
                    android:id="@+id/itemPayCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#7B7B7B"
                    android:textSize="12sp"
                    android:text="287889999" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageButton"
        android:background="#f9f9f9"
        android:layout_alignParentLeft="true"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#7B7B7B"
                android:textSize="12sp"
                android:text="交易时间：" />

            <TextView
                android:id="@+id/itemOrderTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#7B7B7B"
                android:textSize="12sp"
                android:text="2015-09-26" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易状态："
                android:textColor="#7B7B7B"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/itemOrderStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="完成"
                android:textSize="12sp"
                android:textColor="#39ADF7" />
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:onClick="btnOk"
        android:src="@mipmap/mall_ok" />
</RelativeLayout>
