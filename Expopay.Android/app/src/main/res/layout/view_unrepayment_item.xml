<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F9F9F9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/unrepaymentImg"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/mall_mobile"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/unrepaymentProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="15dp"
                android:text="Apple Iphone"/>
            <TextView
                android:id="@+id/unrepaymentPro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="12dp"
                android:text="白色 16G"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="本期应还："
                    android:textSize="15dp"
                    android:textColor="#E85D2C"/>
                <TextView
                    android:id="@+id/unrepaymentBillAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="440+30"
                    android:textSize="15dp"
                    android:textColor="#E85D2C"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(违约金)"
                    android:textSize="15dp"
                    android:textColor="#666666"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:textSize="12dp"
                    android:text="还款日期："/>
                <TextView
                    android:id="@+id/unrepaymentTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:textSize="12dp"
                    android:text="2014-12-12"/>
                <TextView
                    android:id="@+id/unrepaymentOverdueDays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#F5081D"
                    android:textSize="12dp"
                    android:text="逾期3天"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:textSize="12dp"
                    android:text="消费时间："/>
                <TextView
                    android:id="@+id/unrepaymentOrderTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:textSize="12dp"
                    android:text="2014-12-12"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:background="@mipmap/mybills_repayment"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:text="还款"
                android:textColor="#65BDF7"/>
            <TextView
                android:id="@+id/unrepaymentPeriod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:text="剩余10期"
                android:textColor="#B1B1B1"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
