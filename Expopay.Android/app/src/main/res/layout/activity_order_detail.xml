<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:scrollbars="none"
    tools:context="com.expopay.android.activity.OrderDetailCommitActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="#f9f9f9"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/orderDetail_productImg"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/mall_mobile" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:padding="20dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/orderDetail_productName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="iPhone"
                        android:textColor="#646464"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/orderDetail_productPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="￥5288.80"
                        android:textSize="13sp"
                        android:textColor="#EB7851" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/orderDetail_propertyName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="白色"
                            android:textColor="#989898"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/orderDetail_propertyValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="16G"
                            android:textColor="#989898"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/orderDetail_productQutity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="x1"
                            android:textColor="#989898"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/orderDetail_orderStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="已完成"
                        android:textColor="#94E57C"
                        android:textSize="13sp"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout5"
            android:background="#FFFFFF"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分期"
                android:textColor="#989898"
                android:textSize="13sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/orderDetail_repaymentPeriod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="12期 "
                        android:textColor="#989898"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/orderDetail_serviceAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="(522+12)x12=5288"
                        android:textColor="#989898"
                        android:textSize="13sp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/orderDetail_periodAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:text="每期应还款534元"
                    android:textColor="#989898"
                    android:textSize="13sp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout6"
            android:background="@drawable/_rectangle_bg2"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收件人："
                        android:textColor="#959595"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/orderDetail_receiver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="克里斯"
                        android:textColor="#959595"
                        android:textSize="13sp"/>

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="50dp"
                        android:src="@mipmap/mall_phone" />

                    <TextView
                        android:id="@+id/orderDetail_receiverMobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="13666666666"
                        android:textColor="#959595"
                        android:textSize="13sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@mipmap/mall_address" />

                    <TextView
                        android:id="@+id/orderDetail_receiverAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="云南省昆明市五华区海源中路1088号和成国际A座25楼"
                        android:textColor="#EFA48E"
                        android:textSize="13sp"/>

                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:src="@mipmap/mall_more" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/llAddress"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="物流信息"
                android:textSize="13sp"
                android:textColor="#5C5C5C"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:scaleType="fitXY"
                android:src="@mipmap/mall_ogistics_line" />
        </LinearLayout>

        <ListView
            android:id="@+id/orderDetail_expressRecords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:background="#FFFFFF"
            android:divider="#00000000"
            android:dividerHeight="0dip" />

        <LinearLayout
            android:id="@+id/llContext"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/orderDetail_expressRecords"
            android:orientation="horizontal">

            <Button
                android:onClick="cancelOrderOnclick"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/_button_order"
                android:text="取消订单"
                android:textSize="13sp"
                android:textColor="#C1C1C1"/>

            <Button
                android:onClick="contactOnclick"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/_button_order"
                android:text="联系售后"
                android:textColor="#C1C1C1"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llLogistics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llContext"
            android:layout_alignParentBottom="true"
            android:background="#f9f9f9"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单编号："
                    android:textColor="#727272"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/orderDetail_orderNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1234567890"
                    android:textColor="#727272"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="交易流水号："
                    android:textColor="#727272"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/orderDetail_transcationCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9876543456789"
                    android:textColor="#727272"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="交易时间："
                    android:textColor="#727272"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/orderDetail_orderTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2015-09-26  00:00:00"
                    android:textColor="#727272"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="承运公司："
                    android:textColor="#727272"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/orderDetail_expressCompany"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="顺丰快递"
                    android:textColor="#727272"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="承运单号："
                    android:textColor="#727272"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/orderDetail_expressNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="65456789098"
                    android:textColor="#727272"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>