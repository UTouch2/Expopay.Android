<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center"
    android:padding="15dp">

    <!--<RadioButton-->
        <!--android:id="@+id/chooseaddress_item_radio"-->
        <!--android:layout_width="40dp"-->
        <!--android:padding="10dp"-->
        <!--android:layout_height="40dp"-->
        <!--android:gravity="center"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:button="@drawable/_radiobutton_style" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--android:layout_toRightOf="@id/chooseaddress_item_radio"-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收件人："
                android:textColor="#959595"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/chooseaddress_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="克里斯"
                android:textColor="#959595"
                android:textSize="13sp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="50dp"
                android:src="@mipmap/mall_phone" />

            <TextView
                android:id="@+id/chooseaddress_item_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="13666666666"
                android:textColor="#959595"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/mall_address" />

            <TextView
                android:id="@+id/chooseaddress_item_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="云南省昆明市五华区海源中路1088号和成国际A座25楼"
                android:textColor="#EFA48E"
                android:textSize="13sp" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
