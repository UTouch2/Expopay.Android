<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logistics_img"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:scaleType="fitXY"
            android:src="@mipmap/logistics_finished" />

        <ImageView
            android:id="@+id/logistics_line"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:src="@mipmap/logistics_line" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/logisticsStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="【昆明市】正在配送中，李师傅13900003325" />

        <TextView
            android:id="@+id/logisticsTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2015年10月05日   09:10:00" />

    </LinearLayout>
</LinearLayout>
